@model List<CSharp_Technical_Challenge.Models.ViewModels.EmployeeList>
@{
    ViewBag.Title = "List of Employees";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="row" style="text-align:right;padding:5px">
        <a href="~/Employee/New" class="btn btn-primary">Add Employee</a>
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Telephone</th>
                <th>EmploymentDate</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.ID </td>
                    <td>@oElemento.Name </td>
                    <td>@oElemento.Telephone </td>
                    <td>@oElemento.EmploymentDate </td>

                    <td>
                        <a class="btn btn-default" href="~/Employee/Edit/@oElemento.ID">Edit</a>
                        <a class="btn btn-danger" href="~/Employee/Delete/@oElemento.ID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

